<h1>Listing squads</h1>

<table>
  <tr>
    <th>Squald name</th>
    <th>Squad leader</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @squads.each do |squad| %>
  <tr>
    <td><%= squad.squad_name %></td>
    <td><%= squad.squad_leader.user.username %></td>
    <td><%= link_to 'Show', admin_squad_url(squad) %></td>
    <td><%= link_to 'Edit', edit_admin_squad_url(squad) %></td>
    <td><%= link_to 'Destroy', admin_squad_url(squad), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

